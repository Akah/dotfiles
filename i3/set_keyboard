LAYOUT=$(setxkbmap -query | awk '/layout/ {print $2}')

if [[ "$LAYOUT" == "gb" ]]; then
    setxkbmap de
else
    setxkbmap gb
fi

setxkbmap -query | awk '/layout/ {print $2}'
